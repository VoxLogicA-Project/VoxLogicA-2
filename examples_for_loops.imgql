// For loop examples demonstrating the new syntax

// Basic for loop with range
let doubled = for i in range(5) do i * 2
print "doubled_numbers" doubled

// For loop with addition
let incremented = for x in range(3) do x + 1  
save "incremented" incremented

// For loop with nested expression
let squared = for n in range(4) do n * n
print "squares" squared

{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "containerEnv": {
    "SHELL": "/bin/bash",
    "NVIDIA_VISIBLE_DEVICES": "all",
    "NVIDIA_DRIVER_CAPABILITIES": "all"
  },
  "mounts": [
    {
      "type": "bind",
      "source": "/biggie/home/VoxLogicA",
      "target": "/home/VoxLogicA"
    },
    {
      "type": "bind",
      "source": "${env:HOME}",
      "target": "${env:HOME}"
    },
    {
      "type": "bind",
      "source": "/biggie",
      "target": "/biggie"
    }
  ],
  "runArgs": [
    "--device=/dev/dri",
    "--device=/dev/nvidia0",
    "--device=/dev/nvidiactl",
    "--device=/dev/nvidia-uvm",
    "--device=/dev/nvidia-modeset",
    "--hooks-dir=/usr/share/containers/oci/hooks.d/",
    "--hooks-dir=/etc/containers/oci/hooks.d/",
    "-w",
    "${env:HOME}",
    "--userns=keep-id",
    "--group-add=keep-groups"
  ],
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/bash"
          }
        },
        "python.defaultInterpreterPath": "/usr/bin/python3.13"
      },
      "extensions": [
        "ms-python.python",
        "Tyriar.luna-paint",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter"
      ]
    }
  },
  "shutdownAction": "none"
}
{
  "build": {
    "dockerfile": "Dockerfile"
  },
  "mounts": [
    {
      "type": "bind",
      "source": "/biggie/home/VoxLogicA",
      "target": "/home/VoxLogicA"
    },
    {
      "type": "bind",
      "source": "${env:HOME}",
      "target": "${env:HOME}"
    },
    {
      "type": "bind",
      "source": "/biggie",
      "target": "/biggie"
    }
  ],
  "runArgs": [
    "--gpus=all",
    "-w",
    "${env:HOME}",
    "--userns=keep-id",
    "--group-add=keep-groups"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "Tyriar.luna-paint",
        "ms-toolsai.jupyter",
        "ms-azuretools.vscode-docker",
        "ms-python.black-formatter"
      ]
    }
  },
  "shutdownAction": "none"
}
// Test file to check if unqualified names work after import
import "simpleitk"

// Try using unqualified names (without simpleitk. prefix)
let img = ReadImage("tests/chris_t1.nii.gz")

// Calculate threshold using default namespace arithmetic  
let threshold_value = 50 + 50

// Apply threshold using unqualified name
let thresholded = Threshold(img, threshold_value)

// Save the result using unqualified name
let saved = WriteImage(thresholded, "chris_t1_thresholded_unqualified.nii.gz")

// Print confirmation
print "Image thresholded with unqualified names, value" threshold_value
print "Saved to" saved
save "test.bin" thresholded